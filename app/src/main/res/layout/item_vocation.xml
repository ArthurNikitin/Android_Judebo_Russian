<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="#999"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_margin="8dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/delete12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/button_delete" />

        <View
            android:layout_marginRight="8dp"
            android:backgroundTint="@color/toolbar_background_color"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="?android:attr/listDivider" />

        <ImageView
            android:id="@+id/copy12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/button_copy" />

        <View
            android:layout_marginLeft="8dp"
            android:backgroundTint="@color/toolbar_background_color"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="?android:attr/listDivider" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_marginRight="8dp"
            android:backgroundTint="@color/toolbar_background_color"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="?android:attr/listDivider" />

        <ImageView
            android:id="@+id/copy2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/button_copy" />

        <View
            android:layout_marginLeft="8dp"
            android:backgroundTint="@color/toolbar_background_color"
            android:id="@+id/divider2"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="?android:attr/listDivider" />

        <ImageView
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/delete22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/button_delete" />
    </LinearLayout>

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/side_swiper"
        xmlns:swipe="http://schemas.android.com/apk/res-auto"
        swipe:leftEdgeSwipeOffset="0dp"
        swipe:rightEdgeSwipeOffset="0dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:id="@+id/right1"
            android:layout_width="156dp"
            android:weightSum="1"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:alpha="0.0"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/copy22"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/button_copy" />

            <ImageView
                android:alpha="0.0"
                android:background="@color/colorPrimary"
                android:id="@+id/delete2"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/button_delete" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/left1"
            android:layout_width="156dp"
            android:weightSum="1"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:alpha="0.0"
                android:background="@color/colorPrimary"
                android:id="@+id/delete1"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/button_delete" />

            <ImageView
                android:alpha="0.0"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/copy1"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/button_copy" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_iv"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="8dp"
                    app:srcCompat="@drawable/map_default_marker" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="28"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ортопед"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/salary_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10000 RUB" />

                    <TextView
                        android:id="@+id/id_tv"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:text="#345" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="50"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/edit_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="15.10.2003" />

                    <TextView
                        android:id="@+id/delete_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="16.10.2019" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </com.daimajia.swipe.SwipeLayout>

</RelativeLayout>