<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="110dp"
    android:layout_width="match_parent"
    android:background="#999"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_margin="8dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/delete12"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/button_delete" />

        <View
            android:layout_marginRight="8dp"
            android:backgroundTint="@color/toolbar_background_color"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="?android:attr/listDivider" />

        <ImageView
            android:id="@+id/copy12"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/button_copy" />

        <View
            android:layout_marginLeft="8dp"
            android:backgroundTint="@color/toolbar_background_color"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="?android:attr/listDivider" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_marginRight="8dp"
            android:backgroundTint="@color/toolbar_background_color"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="?android:attr/listDivider" />

        <ImageView
            android:id="@+id/copy22"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/button_copy" />

        <View
            android:layout_marginLeft="8dp"
            android:backgroundTint="@color/toolbar_background_color"
            android:id="@+id/divider2"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="?android:attr/listDivider" />

        <ImageView
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/delete22"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/button_delete" />
    </LinearLayout>

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/side_swiper"
        app:leftEdgeSwipeOffset="0dp"
        app:rightEdgeSwipeOffset="0dp"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <LinearLayout
            android:id="@+id/right1"
            android:layout_width="166dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:src="@drawable/corners_right" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/copy2"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:alpha="0.0"
                android:background="@color/colorPrimaryDark"
                app:srcCompat="@drawable/button_copy" />

            <ImageView
                android:id="@+id/delete2"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:alpha="0.0"
                android:background="@color/colorPrimary"
                app:srcCompat="@drawable/button_delete" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/left1"
            android:layout_width="166dp"
            android:weightSum="1"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:alpha="0.0"
                android:background="@color/colorPrimary"
                android:id="@+id/delete1"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/button_delete" />

            <ImageView
                android:alpha="0.0"
                android:background="@drawable/corners_left"
                android:id="@+id/copy1"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/button_copy" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:src="@drawable/corners_left" />

        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:background="#fff"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_marginStart="12dp"
                    android:id="@+id/name_tv"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ОртопедОртопедОртопед Ортопед Ортопед ОртопедОртопедОртопедОртопедОртопедОртопедОртопед"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_iv"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="8dp"
                        app:srcCompat="@drawable/map_default_marker" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="70"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/salary_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="10000 RUB" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="50"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/jobs_list_date_update" />

                            <TextView
                                android:id="@+id/edit_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="15 авг - " />

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:src="@drawable/jobs_list_date_disable" />

                            <TextView
                                android:id="@+id/disable_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="15 авг" />

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/error_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/user_jobs_list_error_please_update"
                            android:textColor="@android:color/holo_red_dark" />

                        <TextView
                            android:layout_marginLeft="5dp"
                            android:textColor="#000"
                            android:id="@+id/id_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="#345" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </com.daimajia.swipe.SwipeLayout>

    <ImageView
        android:id="@+id/notActive_iv"
        android:layout_margin="15dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/jobs_list_not_active_item" />

</RelativeLayout>