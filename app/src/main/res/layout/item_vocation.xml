<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="110dp"
    android:layout_width="match_parent"
    android:background="#999"
    android:layoutDirection="ltr"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.zerobranch.layout.SwipeLayout
        android:id="@+id/side_swiper"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:draggedItem="@id/container"
        app:isTogether="false"
        app:leftItem="@id/left1"
        app:rightItem="@id/right1"
        app:swipeDirection="left|right">

        <LinearLayout
            android:layout_gravity="right"
            android:id="@+id/right1"
            android:background="#999"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

        <LinearLayout
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <View
                android:id="@+id/last_div"
                android:layout_marginRight="0dp"
                android:backgroundTint="@color/toolbar_background_color"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider" />

            <ImageView
                android:layout_marginRight="@dimen/two_dp"
                android:layout_marginLeft="@dimen/two_dp"
                android:id="@+id/see2"
                android:layout_width="@dimen/width_54"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/jobs_list_view" />

            <View
                android:layout_marginRight="0dp"
                android:backgroundTint="@color/toolbar_background_color"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider" />

            <ImageView
                android:layout_marginRight="@dimen/two_dp"
                android:layout_marginLeft="@dimen/two_dp"
                android:id="@+id/copy2"
                android:layout_width="@dimen/width_54"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/jobs_list_copy" />

            <View
                android:layout_marginLeft="0dp"
                android:backgroundTint="@color/toolbar_background_color"
                android:id="@+id/divider2"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider" />

            <ImageView
                android:layout_marginRight="@dimen/two_dp"
                android:layout_marginLeft="@dimen/two_dp"
                android:id="@+id/delete2"
                android:layout_width="@dimen/width_54"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/jobs_list_delete" />

        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:background="#999"
            android:id="@+id/left1"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="1">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

            <ImageView
                android:layout_marginRight="@dimen/two_dp"
                android:layout_marginLeft="@dimen/two_dp"
                android:id="@+id/delete1"
                android:layout_width="@dimen/width_54"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/jobs_list_delete" />

            <View
                android:layout_marginRight="0dp"
                android:backgroundTint="@color/toolbar_background_color"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider" />

            <ImageView
                android:layout_marginRight="@dimen/two_dp"
                android:layout_marginLeft="@dimen/two_dp"
                android:id="@+id/copy1"
                android:layout_width="@dimen/width_54"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/jobs_list_copy" />

            <View
                android:layout_marginLeft="0dp"
                android:backgroundTint="@color/toolbar_background_color"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider" />

            <ImageView
                android:layout_marginRight="@dimen/two_dp"
                android:layout_marginLeft="@dimen/two_dp"
                android:id="@+id/see1"
                android:layout_width="@dimen/width_54"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/jobs_list_view" />

            <View
                android:id="@+id/first_div"
                android:layout_marginLeft="0dp"
                android:backgroundTint="@color/toolbar_background_color"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider" />

        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#999">

            <ImageView
                android:id="@+id/left_corners"
                android:background="#999"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/corners_left" />

            <RelativeLayout
                android:background="#FFFFFF"
                android:padding="5dp"
                android:id="@+id/cont"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:singleLine="true"
                        android:text="ОртопедОртопедОртопед Ортопед Ортопед ОртопедОртопедОртопедОртопедОртопедОртопедОртопед"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_iv"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:padding="8dp"
                            app:srcCompat="@drawable/map_default_marker" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="90"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/salary_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="10000 RUB" />

                                <TextView
                                    android:id="@+id/company_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="company" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/error_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:text="@string/user_jobs_list_error_please_update"
                                    android:textColor="@android:color/holo_red_dark"
                                    android:visibility="visible" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="12dp"
                                        android:layout_height="match_parent"
                                        android:adjustViewBounds="true"
                                        android:src="@drawable/jobs_list_date_update" />

                                    <TextView
                                        android:id="@+id/edit_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="right"
                                        android:text="15 авг - " />

                                    <ImageView
                                        android:layout_width="12dp"
                                        android:layout_height="match_parent"
                                        android:adjustViewBounds="true"
                                        android:src="@drawable/jobs_list_date_disable" />

                                    <TextView
                                        android:id="@+id/disable_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="right"
                                        android:text="15 авг" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/id_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:gravity="right"
                                        android:text="#345" />
                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/notActive_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="25dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/jobs_list_not_active_item" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/right_corners"
                android:background="#999"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/corners_right" />

        </LinearLayout>

    </com.zerobranch.layout.SwipeLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

</RelativeLayout>