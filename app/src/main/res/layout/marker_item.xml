<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <TextView
        android:textSize="12sp"
        android:id="@+id/marker_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxWidth="120dp"
        android:shadowColor="#fff"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="8"
        android:text="TextView" />

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/marker_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/map_default_marker" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/salaryContainerMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/secondContainer2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/secondSalary_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:shadowColor="#fff"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowRadius="3"
                    android:text="ยง1113414"
                    android:textSize="10sp" />

                <TextView
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowColor="#fff"
                    android:shadowRadius="3"
                    android:id="@+id/secondSalaryVal_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RUB"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/salaryContainer2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowColor="#fff"
                    android:shadowRadius="3"
                    android:id="@+id/salary_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123123"
                    android:textSize="10sp" />

                <TextView
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowColor="#fff"
                    android:shadowRadius="3"
                    android:id="@+id/salaryVal_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USD"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>