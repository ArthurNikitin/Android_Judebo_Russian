<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_marginStart="6dp"
        android:shadowRadius="5"
    android:shadowDx="0"
    android:shadowDy="0"
    android:shadowColor="#fff"
        android:gravity="start"
        android:paddingTop="2dp"
        android:textSize="12sp"
        android:id="@+id/marker_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="120dp"
        android:maxLines="2"
        android:text="TextView" />

    <LinearLayout
        android:id="@+id/gravity_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/marker_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/map_default_marker" />

        <LinearLayout
            android:id="@+id/salaryContainerMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="2dp">

            <LinearLayout
                android:id="@+id/secondContainer2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:shadowRadius="2"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowColor="#17a"
                    android:id="@+id/secondSalary_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ยง1113414"
                    android:textSize="10sp" />

                <TextView
                    android:shadowRadius="2"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowColor="#fff"
                    android:id="@+id/secondSalaryVal_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RUB"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/salaryContainer2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:shadowRadius="2"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowColor="#fff"
                    android:id="@+id/salary_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123123"
                    android:textSize="10sp" />

                <TextView
                    android:shadowRadius="2"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowColor="#fff"
                    android:id="@+id/salaryVal_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USD"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>